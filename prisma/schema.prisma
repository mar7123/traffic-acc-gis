model GeoLocation {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    geoId    Int
    geoId2   Int?
    name     String
    name2    String?
    geojs    Json
    geodatas GeoData[]
}

model GeoData {
    id                String      @id @default(auto()) @map("_id") @db.ObjectId
    geoloc_id         String      @db.ObjectId
    geoloc            GeoLocation @relation(fields: [geoloc_id], references: [id], onDelete: Cascade)
    wilayah           String
    tahun             Int
    jumlah_kecelakaan Float
    meninggal         Float
    luka_berat        Float
    luka_ringan       Float
    kerugian          Float
}
